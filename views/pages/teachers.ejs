<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body class="bg-indigo-50 dark:bg-gray-900 text-gray-800 dark:text-gray-100 font-sans">
    <div class="flex h-screen overflow-hidden">
        <%- include('../partials/sidebar') %>
            <div class="relative flex flex-col flex-1 overflow-y-auto overflow-x-hidden">
                <!-- Mobile Header -->
                <div class="md:hidden">
                    <%- include('../partials/header') %>
                </div>

                <main class="w-full flex-grow p-8">
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-200">
                            Teachers & Staff
                        </h2>
                        <button id="toggleTeacherForm"
                            class="px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-indigo-900 border border-transparent rounded-lg hover:bg-indigo-800 focus:outline-none shadow-sm">
                            + Add New Teacher
                        </button>
                    </div>

                    <!-- Add Form (Hidden by default) -->
                    <div id="addTeacherForm"
                        class="hidden mb-8 p-6 bg-white rounded-xl shadow-sm dark:bg-gray-800 border-t-4 border-indigo-900">
                        <h4 class="mb-4 text-lg font-semibold text-gray-700 dark:text-gray-300">New Teacher Details</h4>
                        <form action="/teachers" method="POST">
                            <div class="grid gap-6 mb-6 md:grid-cols-2">
                                <label class="block text-sm">
                                    <span class="text-gray-700 dark:text-gray-400 font-medium">Name</span>
                                    <input name="name"
                                        class="block w-full mt-1 text-sm rounded-lg border-gray-300 bg-gray-50 focus:border-indigo-500 focus:ring-indigo-500 shadow-sm p-2.5"
                                        placeholder="e.g. Usthad Ali" required />
                                </label>
                                <label class="block text-sm">
                                    <span class="text-gray-700 dark:text-gray-400 font-medium">Subject /
                                        Responsibility</span>
                                    <input name="subject"
                                        class="block w-full mt-1 text-sm rounded-lg border-gray-300 bg-gray-50 focus:border-indigo-500 focus:ring-indigo-500 shadow-sm p-2.5"
                                        placeholder="e.g. Hifz" required />
                                </label>
                                <label class="block text-sm">
                                    <span class="text-gray-700 dark:text-gray-400 font-medium">Salary Amount (₹)</span>
                                    <input name="salaryAmount" type="number"
                                        class="block w-full mt-1 text-sm rounded-lg border-gray-300 bg-gray-50 focus:border-indigo-500 focus:ring-indigo-500 shadow-sm p-2.5"
                                        placeholder="15000" required />
                                </label>
                                <label class="block text-sm">
                                    <span class="text-gray-700 dark:text-gray-400 font-medium">Phone</span>
                                    <input name="phone"
                                        class="block w-full mt-1 text-sm rounded-lg border-gray-300 bg-gray-50 focus:border-indigo-500 focus:ring-indigo-500 shadow-sm p-2.5"
                                        placeholder="9876543210" required />
                                </label>
                            </div>
                            <div class="flex justify-end">
                                <button type="submit"
                                    class="px-5 py-2.5 text-sm font-medium text-white bg-indigo-900 rounded-lg hover:bg-indigo-800 focus:ring-4 focus:outline-none focus:ring-indigo-300">
                                    Save Teacher
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Teachers Table -->
                    <div class="w-full overflow-hidden rounded-xl shadow-sm bg-white">
                        <div class="w-full overflow-x-auto">
                            <% if (teachers && teachers.length> 0) { %>
                                <table class="w-full whitespace-no-wrap">
                                    <thead>
                                        <tr
                                            class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b bg-gray-50">
                                            <th class="px-4 py-4">Name</th>
                                            <th class="px-4 py-4">Subject</th>
                                            <th class="px-4 py-4">Salary</th>
                                            <th class="px-4 py-4">Phone</th>
                                            <th class="px-4 py-4">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y">
                                        <% teachers.forEach(teacher=> { %>
                                            <tr class="text-gray-700 hover:bg-gray-50 transition">
                                                <td class="px-4 py-4">
                                                    <div class="flex items-center text-sm">
                                                        <!-- Avatar Placeholder -->
                                                        <div class="relative hidden w-8 h-8 mr-3 rounded-full md:block">
                                                            <div
                                                                class="w-full h-full rounded-full bg-indigo-100 text-indigo-700 flex items-center justify-center font-bold">
                                                                <%= teacher.name.charAt(0) %>
                                                            </div>
                                                        </div>
                                                        <div>
                                                            <p class="font-semibold text-indigo-900">
                                                                <%= teacher.name %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="px-4 py-4 text-sm font-medium">
                                                    <span
                                                        class="px-2 py-1 text-xs font-semibold leading-tight text-green-700 bg-green-100 rounded-full">
                                                        <%= teacher.subject %>
                                                    </span>
                                                </td>
                                                <td class="px-4 py-4 text-sm">
                                                    ₹<%= teacher.salaryAmount %>
                                                </td>
                                                <td class="px-4 py-4 text-sm">
                                                    <%= teacher.phone %>
                                                </td>
                                                <td class="px-4 py-4">
                                                    <div class="flex items-center space-x-4 text-sm">
                                                        <% if (user.role==='admin' ) { %>
                                                            <a href="/teachers/delete/<%= teacher._id %>"
                                                                class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-red-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray hover:bg-red-50"
                                                                aria-label="Delete"
                                                                onclick="return confirm('Are you sure you want to delete this teacher?')">
                                                                <svg class="w-5 h-5" aria-hidden="true"
                                                                    fill="currentColor" viewBox="0 0 20 20">
                                                                    <path fill-rule="evenodd"
                                                                        d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z"
                                                                        clip-rule="evenodd"></path>
                                                                </svg>
                                                            </a>
                                                            <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <div class="p-6 text-center text-gray-500">
                                        <p>No teachers found. Click "Add New Teacher" to get started.</p>
                                    </div>
                                    <% } %>
                        </div>
                    </div>
                </main>
            </div>
    </div>

    <script>
        console.log('Teacher page script loaded (Force Style Version)');

        const toggleBtn = document.getElementById('toggleTeacherForm');
        const form = document.getElementById('addTeacherForm');

        if (toggleBtn) {
            toggleBtn.style.cursor = 'pointer';

            toggleBtn.addEventListener('click', function (e) {
                e.preventDefault();
                console.log('Button clicked - Attempting direct style toggle');

                if (form) {
                    // Force using inline style display instead of class
                    // This bypasses any Tailwind issues
                    if (form.style.display === 'none' || form.classList.contains('hidden')) {
                        form.classList.remove('hidden');
                        form.style.display = 'block';
                        console.log('Set to block');
                    } else {
                        form.style.display = 'none';
                        console.log('Set to none');
                    }
                } else {
                    alert('Error: Form not found');
                }
            });
        }
    </script>
</body>

</html>